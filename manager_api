server {
    server_name managerdb.com.br www.managerdb.com.br;

    # FRONTEND (Angular)
    location / {
        root /var/www/frontend/browser; # Adicione o /browser aqui
        index index.html index.htm;
        try_files $uri $uri/ /index.html;
    }

    # BACKEND (Django API via Gunicorn)
    location /api/ {
        # Esta linha remove o /api/ e mantém o resto da URL intacto
        rewrite ^/api/(.*)$ /$1 break;
        
        include proxy_params;
        proxy_pass http://unix:/run/gunicorn.sock;
        
        # Garante que o Django saiba o domínio original
        proxy_set_header X-Real-IP $remote_addr;
	proxy_connect_timeout 600s;
    	proxy_send_timeout 600s;
    	proxy_read_timeout 600s;
    	fastcgi_send_timeout 600s;
    	fastcgi_read_timeout 600s;
    }

    # DJANGO ADMIN E ESTÁTICOS
    location /admin/ {
        include proxy_params;
        proxy_pass http://unix:/run/gunicorn.sock;
    }

    location /static/ {
        alias /opt/manager_api/static/;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/managerdb.com.br/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/managerdb.com.br/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}
server {
    if ($host = www.managerdb.com.br) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = managerdb.com.br) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name managerdb.com.br www.managerdb.com.br;
    return 404; # managed by Certbot




}
